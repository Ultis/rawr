            <controls:TabItem Header="Read Me!" x:Name="tabItem3">
                <Grid Name="LO_Tab3">
                    <TextBox Margin="4,2" Name="tbModuleNotes" />
                </Grid>               
            </controls:TabItem>
        </controls:TabControl>
    </Grid>
</UserControl>
