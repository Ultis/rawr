<basics:ChildWindow
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
	x:Class="Rawr.UI.ErrorWindow"
	Title="Error" Width="255">
	<StackPanel>
		<TextBlock x:Name="MessageText" Text="This is a long error message" TextWrapping="Wrap" Width="230" Margin="4,4,4,4"/>

		<Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Center" Margin="0,4,0,8" />
	</StackPanel>
</basics:ChildWindow>