<basics2:ChildWindow
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:basics2="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
	xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
	x:Class="Rawr.UI.WelcomeWindow"
	Title="Welcome to Rawr3 Public Beta" Width="655">
	<StackPanel Orientation="Vertical">
		<TextBlock x:Name="MessageText" HorizontalAlignment="Left" TextWrapping="Wrap" Width="630" Margin="4,4,4,4"/>
    <StackPanel Grid.Row="3" HorizontalAlignment="Left" Orientation="Horizontal">
      <TextBlock Margin="4,4,0,2" VerticalAlignment="Center" Text="General Posting Guidelines - "/>
      <!--IFSL-->
      <HyperlinkButton Margin="-2,2,2,0" VerticalAlignment="Center" Content="http://rawr.codeplex.com/wikipage?title=PostingGuidelines" NavigateUri="http://rawr.codeplex.com/wikipage?title=PostingGuidelines" TargetName="_blank"/>
      <!--ENDIFSL-->
      <!--IFWPF
        <TextBlock Margin="-2,2,2,0" VerticalAlignment="Center">
            <Hyperlink NavigateUri="http://rawr.codeplex.com/wikipage?title=PostingGuidelines" RequestNavigate="Hyperlink_RequestNavigate">http://rawr.codeplex.com/wikipage?title=PostingGuidelines</Hyperlink>
        </TextBlock>
        ENDIFWPF-->
    </StackPanel>
    <StackPanel Grid.Row="3" HorizontalAlignment="Left" Orientation="Horizontal">
      <TextBlock Margin="4,4,0,2" VerticalAlignment="Center" Text="Bug Reporting Format - "/>
      <!--IFSL-->
      <HyperlinkButton Margin="-2,2,2,0" VerticalAlignment="Center" Content="http://rawr.codeplex.com/wikipage?title=BugReportingFormatGuide" NavigateUri="http://rawr.codeplex.com/wikipage?title=BugReportingFormatGuide" TargetName="_blank"/>
      <!--ENDIFSL-->
      <!--IFWPF
        <TextBlock Margin="-2,2,2,0" VerticalAlignment="Center">
            <Hyperlink NavigateUri="http://rawr.codeplex.com/wikipage?title=BugReportingFormatGuide" RequestNavigate="Hyperlink_RequestNavigate">http://rawr.codeplex.com/wikipage?title=BugReportingFormatGuide</Hyperlink>
        </TextBlock>
        ENDIFWPF-->
    </StackPanel>
		<Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Center" Margin="0,4,0,8" />
	</StackPanel>
</basics2:ChildWindow>