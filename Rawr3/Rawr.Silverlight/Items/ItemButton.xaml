<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:Rawr="clr-namespace:Rawr;assembly=Rawr.Base"
	xmlns:local="clr-namespace:Rawr.Silverlight"
	x:Class="Rawr.Silverlight.ItemButton"
	Width="70" Height="70"
	LostFocus="UserControl_LostFocus">
	<Grid x:Name="LayoutRoot">
				<Button x:Name="MainButton" Height="70" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Click="MainButton_Click" MouseEnter="MainButton_MouseEnter" MouseLeave="MainButton_MouseLeave">
					<Image x:Name="IconImage" Height="Auto" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Button>
		<Popup x:Name="ListPopup" HorizontalOffset="72">
			<local:ItemListControl x:Name="ComparisonItemList"/>
		</Popup>
		<local:ItemTooltip x:Name="ItemTooltip"/>
	</Grid>
</UserControl>