<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:Rawr.Silverlight"
	x:Class="Rawr.Silverlight.GlyphControl"
	d:DesignWidth="341" d:DesignHeight="570">

	<ScrollViewer BorderThickness="0,0,0,0">
		<StackPanel>
			<local:GroupBox Header="Major Glyphs">
				<StackPanel x:Name="MajorStack"/>
			</local:GroupBox>
			<local:GroupBox Header="Minor Glyphs">
				<StackPanel x:Name="MinorStack"/>
			</local:GroupBox>
		</StackPanel>
	</ScrollViewer>
</UserControl>