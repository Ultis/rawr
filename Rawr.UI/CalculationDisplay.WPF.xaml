<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
    mc:Ignorable="d"
    x:Class="Rawr.UI.CalculationDisplay"
    d:DesignWidth="325" d:DesignHeight="480">

    <ScrollViewer x:Name="TheScrollViewer" VerticalScrollBarVisibility="Auto" Padding="0">
        <layoutToolkit:Accordion x:Name="CalculationsAccordion" HorizontalAlignment="Stretch" VerticalAlignment="Top" SelectionMode="ZeroOrMore">
            <layoutToolkit:AccordionItem Header="AccordionItem" VerticalAlignment="Top"/>
            <layoutToolkit:AccordionItem Header="AccordionItem" VerticalAlignment="Top"/>
            <layoutToolkit:AccordionItem Header="AccordionItem" VerticalAlignment="Top"/>
        </layoutToolkit:Accordion>
    </ScrollViewer>
</UserControl>